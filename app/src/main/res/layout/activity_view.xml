<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">


    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="89dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_black"
            android:text="Detail Data Peserta"
            android:textAlignment="center"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="80px"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp">

            <TextView
                android:id="@+id/lbl_namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/rubik"
                android:labelFor="@+id/isi_namalengkap"
                android:textColor="?attr/actionMenuTextColor"
                android:text="Nama Lengkap :"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isi_namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_namalengkap"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbl_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isi_namalengkap"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:labelFor="@+id/isi_tgl_lahir"
                android:text="Tanggal Lahir : "
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isi_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_tgl_lahir"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbl_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isi_tgl_lahir"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:labelFor="@+id/isi_umur"
                android:text="Umur : "
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isi_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_umur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbl_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isi_umur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:labelFor="@+id/isi_gender"
                android:text="Jenis Kelamin :"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isi_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbl_expo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isi_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik"
                android:labelFor="@+id/isi_expo"
                android:text="Jenis Expo : "
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isi_expo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_expo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rubik"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp" />


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>